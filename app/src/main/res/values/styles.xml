<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/slate_gray</item>
        <item name="colorPrimaryDark">@color/dark_blue_gray</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/dark_blue_gray</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:textColorPrimary">@color/light_blue</item>
        <item name="android:navigationBarColor">@color/slate_gray</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="AppTheme.Text" parent="AppTheme">
    </style>

    <style name="AppTheme.Text.Label" parent="AppTheme.Text">
    </style>

    <style name="AppTheme.Text.Value" parent="AppTheme.Text">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
